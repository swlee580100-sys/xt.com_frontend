# 数据库配置
# 请根据您的本地 MySQL 配置修改以下参数
DATABASE_URL="mysql://root:your_password@localhost:3306/crypto_sim"

# JWT 配置
JWT_ACCESS_TOKEN_SECRET="your-super-secret-access-token-key-here-change-me"
JWT_REFRESH_TOKEN_SECRET="your-super-secret-refresh-token-key-here-change-me"

# Redis 配置
REDIS_HOST="127.0.0.1"
REDIS_PORT="6379"

# 邮件配置（可选）
MAIL_HOST="smtp.example.com"
MAIL_PORT="587"
MAIL_USER="your-email@example.com"
MAIL_PASSWORD="your-email-password"
MAIL_FROM="no-reply@example.com"

# 市场数据配置（可选）
BINANCE_WS_BASE_URL="wss://stream.binance.com:9443/ws"
BINANCE_SYMBOLS="btcusdt,ethusdt,adausdt"
COINGECKO_BASE_URL="https://api.coingecko.com/api/v3"

# 应用配置
NODE_ENV="development"
HTTP_HOST="0.0.0.0"
HTTP_PORT="3000"

# 认证配置
# 开发模式下跳过 JWT 验证（true=跳过验证，false=需要验证）
# 生产环境务必设置为 false
AUTH_SKIP_JWT_VERIFICATION="true"
